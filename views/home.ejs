<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Mandate Wire</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <div class="logo">The Mandate <span class="accent">Wire</span></div>
        <nav>
            <a href="/posts" class="active">Home</a>
            <a href="/about">About</a>
            <% if (userId) { %>
                <a href="/posts/create">Create Post</a>
                <form action="/auth/logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-button">Logout</button>
                </form>
            <% } else { %>
                <a href="/auth/login">Login</a>
            <% } %>
        </nav>
        <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>
    <main>
        <% if (posts.length > 0) { %>
            <section class="latest-post">
                <h2>Breaking News</h2>
                <article class="latest-article">
                    <div class="latest-content">
                        <p class="meta"><%= posts[0].username %> • <%= new Date(posts[0].published_at || posts[0].created_at).toLocaleDateString() %></p>
                        <h1><a href="/posts/<%= posts[0].post_id %>"><%= posts[0].title %></a></h1>
                        <p class="excerpt"><%= posts[0].content.substring(0, 300) %>...</p>
                        <a href="/posts/<%= posts[0].post_id %>" class="read-more">Read more</a>
                    </div>
                </article>
            </section>
        <% } %>

        <% if (posts.length > 0) { %>
            <section class="latest-posts-section">
                <h2>Latest Posts</h2>
                <div class="latest-posts-grid">
                    <% posts.slice(1).forEach(post => { %>
                        <article class="latest-post-card">
                            <div class="latest-post-content">
                                <p class="meta"><%= post.username %> • <%= new Date(post.published_at || post.created_at).toLocaleDateString() %></p>
                                <h3><a href="/posts/<%= post.post_id %>"><%= post.title %></a></h3>
                                <p class="excerpt"><%= post.content.substring(0, 150) %>...</p>
                                <a href="/posts/<%= post.post_id %>" class="read-more">Read more</a>
                            </div>
                        </article>
                    <% }); %>
                </div>
            </section>
        <% } %>

        <div class="content-wrapper">
            <div class="article-feed">
                <% posts.slice(1).forEach(post => { %>
                    <article class="article-card">
                        <div class="article-content">
                            <p class="meta"><%= post.username %> • <%= new Date(post.published_at || post.created_at).toLocaleDateString() %></p>
                            <h2><a href="/posts/<%= post.post_id %>"><%= post.title %></a></h2>
                            <p class="excerpt"><%= post.content.substring(0, 200) %>...</p>
                            <a href="/posts/<%= post.post_id %>" class="read-more">Read more</a>
                        </div>
                    </article>
                <% }); %>
            </div>
            <aside class="sidebar">
            </aside>
        </div>
    </main>
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <div class="footer-logo">The Mandate <span class="accent">Wire</span></div>
                <p>Insights on the digital frontier.</p>
            </div>
            <div class="footer-section">
                <h3>Navigate</h3>
                <ul>
                    <li><a href="/posts">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>&nbsp;</h3>
                <ul>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                </ul>
            </div>
        </div>
        <p class="copyright">&copy; 2025 The Mandate Wire. All rights reserved.</p>
    </footer>
</body>
</html>