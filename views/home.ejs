<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Mandate Wire</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <div class="logo">The Mandate <span class="accent">Wire</span></div>
        <nav>
            <a href="/posts" class="active">Home</a>
            <a href="/about">About</a>
            <% if (userId) { %>
                <a href="/posts/create">Create Post</a>
                <form action="/auth/logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-button">Logout</button>
                </form>
            <% } else { %>
                <a href="/auth/login">Login</a>
            <% } %>
        </nav>
        <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>
    <main>
        <div class="article-feed">
            <% posts.forEach(post => { %>
                <article class="article-card">
                    <div class="article-content">
                        <p class="meta"><%= post.username %> â€¢ <%= new Date(post.published_at || post.created_at).toLocaleDateString() %></p>
                        <h2><a href="/posts/<%= post.post_id %>"><%= post.title %></a></h2>
                        <p class="excerpt"><%= post.content.substring(0, 200) %>...</p>
                        <a href="/posts/<%= post.post_id %>" class="read-more">Read more</a>
                    </div>
                </article>
            <% }); %>
        </div>
    </main>
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <div class="footer-logo">The Mandate <span class="accent">Wire</span></div>
                <p>Insights on the digital frontier.</p>
            </div>
            <div class="footer-section">
                <h3>Navigate</h3>
                <ul>
                    <li><a href="/posts">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>&nbsp;</h3>
                <ul>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                </ul>
            </div>
        </div>
        <p class="copyright">&copy; 2025 The Mandate Wire. All rights reserved.</p>
    </footer>
</body>
</html>