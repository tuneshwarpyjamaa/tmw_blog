<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %> - The Mandate Wire</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <div class="logo">The Mandate <span class="accent">Wire</span></div>
        <nav>
            <a href="/posts">Home</a>
            <a href="/about">About</a>
            <% if (userId) { %>
                <a href="/posts/create">Create Post</a>
                <form action="/auth/logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-button">Logout</button>
                </form>
            <% } else { %>
                <a href="/auth/login">Login</a>
            <% } %>
        </nav>
        <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>
    <main>
        <article class="article-detail">
            <header class="article-header">
                <h1><%= post.title %></h1>
                <p class="meta">By <%= post.username %> • <%= new Date(post.published_at || post.created_at).toLocaleDateString() %></p>
            </header>

            <div class="article-body">
                <%- post.content %>
            </div>

            <% if (userId && userId == post.author_id) { %>
                <div class="article-actions">
                    <a href="/posts/<%= post.post_id %>/edit" class="button">Edit Post</a>
                    <form action="/posts/<%= post.post_id %>/delete" method="post" style="display:inline;">
                        <button type="submit" class="button button-delete">Delete Post</button>
                    </form>
                </div>
            <% } %>
        </article>

        <section class="comments">
            <h2>Comments</h2>
            <div class="comment-list">
                <% if (comments.length > 0) { %>
                    <% comments.forEach(comment => { %>
                        <div class="comment">
                            <p class="meta"><strong><%= comment.username %></strong> • <%= new Date(comment.created_at).toLocaleDateString() %></p>
                            <p><%= comment.content %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No comments yet. Be the first to share your thoughts!</p>
                <% } %>
            </div>

            <% if (userId) { %>
                <form action="/comments/<%= post.post_id %>" method="post" class="comment-form">
                    <textarea name="content" placeholder="Join the discussion..." required></textarea>
                    <button type="submit">Submit Comment</button>
                </form>
            <% } else { %>
                <p>
                    <a href="/auth/login">Log in</a> to leave a comment.
                </p>
            <% } %>
        </section>
    </main>
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <div class="footer-logo">The Mandate <span class="accent">Wire</span></div>
                <p>Insights on the digital frontier.</p>
            </div>
            <div class="footer-section">
                <h3>Navigate</h3>
                <ul>
                    <li><a href="/posts">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>&nbsp;</h3>
                <ul>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                </ul>
            </div>
        </div>
        <p class="copyright">&copy; 2025 The Mandate Wire. All rights reserved.</p>
    </footer>
</body>
</html>